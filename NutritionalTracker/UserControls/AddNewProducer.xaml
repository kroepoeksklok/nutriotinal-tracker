<UserControl x:Class="NutritionalTracker.UserControls.AddNewProducer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
        <StackPanel Orientation="Horizontal">
            <Label Width="100">Name:</Label>
            <TextBox Width="250" Text="{Binding NewProducerName}"></TextBox>
        </StackPanel>
        <Button HorizontalContentAlignment="Left" HorizontalAlignment="Left" Padding="10 2 10 2" Command="{Binding AddProducer}">Add producer</Button>
    </StackPanel>
</UserControl>
